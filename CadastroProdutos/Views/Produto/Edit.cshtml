@model CadastroProdutos.Models.Produto

<h1>Editar Produto</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProdutoId" />

    <div>
        <label asp-for="Nome"></label>
        <input asp-for="Nome" />
    </div>

    <div>
        <label asp-for="Categoria"></label>
        <input asp-for="Categoria" />
    </div>

    <div>
        <label asp-for="Preco"></label>
        <input asp-for="Preco" type="number" step="0.01" />
    </div>

    <div>
        <label asp-for="Quantidade"></label>
        <input asp-for="Quantidade" type="number" />
    </div>

    <button type="submit" class="btn">Salvar</button>
    <a class="btn" style="background-color: gray; margin-left: 10px;" asp-controller="Produto" asp-action="Index">Cancelar</a>
</form>
