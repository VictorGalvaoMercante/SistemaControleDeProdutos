@model IEnumerable<CadastroProdutos.Models.Produto>

<h1>Lista De Produtos</h1>

<br />

<a href="/Produto/Create" class="btn" style="background-color: #007bff">+ Novo Produto</a>

<table>
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Categoria</th>
            <th scope="col">Preço</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <th scope="row">@produto.ProdutoId</th>
                <td>@produto.Nome</td>
                <td>@produto.Categoria</td>
                <td>@produto.Preco.ToString("C")</td>
                <td>@produto.Quantidade</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = produto.ProdutoId })" class="btn btn-primary btn-sm">Editar</a>
                    <a href="@Url.Action("Delete", new { id = produto.ProdutoId })" class="btn btn-danger btn-sm" style="background-color: #dc3545">Excluir</a>
                </td>
            </tr>


        }
    </tbody>
</table>
